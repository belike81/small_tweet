<h1>Users list</h1>

<%= will_paginate %>
<ul class="users_list">
    <% @users.each do |user| %>
      <li>
        <div class="users_list_gravatar"><%=  gravatar_for user, :size => 50 %></div>
        <div class="users_list_username"><%= link_to user.name, user %></div>
        <div class="clear"></div>
      </li>
    <% end %>
</ul>
<%= will_paginate %>
